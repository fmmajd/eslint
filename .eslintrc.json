{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-console": 0,
		"no-var": "error",
		"prefer-arrow-callback": "error",
		"prefer-template": "error",
		"no-eval": "error",
		"prefer-const": 1,
		"no-inline-comments": 0
	},
	"globals": {
		"require": false,
		"global": false,
		"module": false,
		"describe": false,
		"it": false,
		"beforeEach": false
	}
}
